%install
# reset buildroot
rm -rf $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT
make PREFIX=/usr LIBDIR=/usr/lib64
make install PREFIX=/usr LIBDIR=/usr/lib64 DESTDIR=$RPM_BUILD_ROOT

%clean
rm -rf $RPM_BUILD_ROOT

